<div class="line-item">
  <%= image_tag line_item.product.image.url, class: 'line-item-image' %>
  <div class="line-item-details">
    <h4><%= line_item.product.name %></h4>
    <p><%= line_item.product.description %></p>
    <p>Quantity: <%= line_item.quantity %></p>
    <p>Line Total: <%= humanized_money_with_symbol line_item.total_price %></p>
  </div>
</div>
