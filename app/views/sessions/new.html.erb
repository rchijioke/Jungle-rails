<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Login</h1>
        </div>
        <div class="card-body">
          <%= form_tag login_path do %>
            <div class="form-group">
              <%= label_tag 'Email' %>
              <%= email_field_tag :email, nil, class: 'form-control', placeholder: 'Enter your email', required: true %>
            </div>

            <div class="form-group">
              <%= label_tag 'Password' %>
              <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Enter your password', required: true %>
            </div>

            <div class="form-group">
              <%= submit_tag 'Login', class: 'btn btn-primary btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
